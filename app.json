{
  "expo": {
    "name": "PostApp",
    "slug": "postapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.buiquangtien.postapp",
      "buildNumber": "1.0.0",
      "requireFullScreen": false,
      "infoPlist": {
        "NSCameraUsageDescription": "PostApp cần quyền truy cập camera để chụp ảnh cho bài viết",
        "NSPhotoLibraryUsageDescription": "PostApp cần quyền truy cập thư viện ảnh để chọn ảnh cho bài viết",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#667eea"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.buiquangtien.postapp",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-image-picker"
    ],
    "owner": "buiquangtien",
    "extra": {
      "eas": {
        "projectId": "1720fdb0-fa94-4464-ac6b-9970ac08a273"
      }
    }
  }
}
